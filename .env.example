# Zabbix API Configuration
ZABBIX_URL=http://127.0.0.1:8080/api_jsonrpc.php
ZABBIX_API_TOKEN=YOUR_ZABBIX_API_TOKEN

# MQTT Configuration
MQTT_BROKER=mqtt.example.com
MQTT_USER=mqtt_user
MQTT_PASS=mqtt_pass

# Ignore acknowledged problems
IGNORE_ACKNOWLEDGED=True

# Debug mode (True/False)
DEBUG=True

# Location (coordinates for sunrise/sunset calculation)
LATITUDE=55.7558
LONGITUDE=37.6173
TIMEZONE=Europe/Moscow

# Sunrise/sunset offsets (in hours)
# Negative = before event, Positive = after event
SUNRISE_OFFSET_HOURS=0.5    # Через 30 мин после восхода (начало дневного режима)
SUNSET_OFFSET_HOURS=0.5     # Через 30 мин после заката (начало ночного режима)

# Brightness levels (0-100)
BRIGHTNESS_DAY=70
BRIGHTNESS_NIGHT=5
BRIGHTNESS_TWILIGHT=20    # Яркость в сумерках (по умолчанию - среднее между дневной и ночной)